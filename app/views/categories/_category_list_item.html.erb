<% subcategories.each do |subcategory| %>
  <% if category_viewable?(subcategory) %>
    <a href="<%= category_path(subcategory, view_style: "list") %>" class="unstyled-link">
      <div horizontal layout center class="category-list-item">
        <%= image_tag "icons/folders/folder_jeans.png", width: "50px", height: "50px" %>
        <%= subcategory.name %>
      </div>
    </a>
  <% end %>
<% end %>