<% featured.each do |category, docs| %>
  <% if !docs.empty? and !category.nil?%>
    <div class="container">
      <% if category.is_root? %>
        <h4> <%= category.name %> </h4>
      <% else %>
        <h4> <%= "#{category.root.name} - #{category.name}" %> </h4> 
      <% end %>
      <% docs.each do |doc| %>
        <% if !doc.current_revision.nil? %>
          <%= render partial: "documents/document_list_item", locals: {doc: doc} %>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>