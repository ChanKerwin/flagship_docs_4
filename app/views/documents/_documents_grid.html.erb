<div class="panel panel-default">
  <div class="breadcrumb">
    <div class="pull-right" style="padding:20px">
      <%= render partial: "documents/documents_view_style" %>
    </div>
    <h3 style="display: inline-block"> 
      <%= @category.name %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="categories_grid">
      <!-- Show a tile for each subcategory -->
      <% if @subcategories %>
        <% @subcategories.each do |subcategory| %>
          <%= render partial: "categories/category_tile", locals: {subcategory: subcategory} %>
        <% end %>
      <% end %>
      <!-- Show a tile for each document -->
      <% if @documents %>
        <%= paginate @documents %>
        <% @documents.each do |doc| %>
          <% if !doc.current_revision.nil? %>
            <%= render partial: "documents/document_tile", locals: { doc: doc } %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
  