<div class="modal-body">
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <br />

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>
  <br />

  <div class="form-group">
    <%= f.label "Make Private", :style => "display: inline-block" %>
    <%= f.check_box :is_private, :style => "display: inline-block", checked: false %>
    <br />
    <span style="font-size: 10px"> Checking this will hide the document from non-group members.</span>
  </div>

  <div class="form-group">
    <%= f.label "Everyone Can Edit", :style => "display: inline-block"%>
    <%= f.check_box :is_writable, :style => "display: inline-block", checked: false %>
    <br />
    <span style="font-size: 10px"> Checking this box allows non-group members to revise this document.</span>
  </div>

  <br />

  <!-- Category the document is uploaded to -- >
  <%= f.hidden_field :category_id, value: @category.id %>

  <!-- Upload file for document creation, hide for document editing -->
  <% if include_revision %>
    <hr />
    <%= f.fields_for :revision do |rev| %>
      <div class="row">
        <div class="col-md-5">
          <%= f.label :file %>
          <%= rev.file_field :file %>
        </div>
        <div class="col-md-1">
          <br>
          <small><b> or </b></small>
        </div>
        <div class="col-md-6" style="display: inline">
          <%= rev.label "External Link" %>
          <%= rev.text_field :doc_link, placeholder: "https://docs.google.com/document/...", :class => "form-control" %>
        </div>
      </div>
    <% end %>
  <% end %>

</div>

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= f.submit "Submit Document", :class => "btn btn-default" %>
</div>