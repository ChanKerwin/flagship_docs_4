<section vertical layout>
  <div class="grid-scroll" fit>
    <%= render partial: "documents/document_view_style" %>
    <div class="grid-view" flex horizontal wrap around-justified layout cross-fade>
      <div> <%= paginate @documents %> </div>
      <!-- Show a tile for each subcategory -->
      <% if @subcategories %>
        <% @subcategories.each do |subcategory| %>
          <%= render partial: "categories/category_grid_item", locals: {subcategory: subcategory} %>
        <% end %>
      <% end %>
      <!-- Show a tile for each document -->
      <% if @documents %>
        <% @documents.each do |doc| %>
          <% if !doc.current_revision.nil? %>
            <%= render partial: "documents/grid/document_grid_item", locals: { doc: doc } %>
          <% end %>
        <% end %> 
      <% end %>
    </div>
  </div>
</section>