<div class="panel panel-default">
  <ol class="breadcrumb">
    <li><%= link_to "Home", categories_path %></li>
    <li class="active"><%= @group.name.capitalize %></li>
    <% if admin? or @group.is_leader?(current_user) %>
      <div class="pull-right"><%= link_to "Edit", edit_group_path(@group), :class => "btn btn-primary btn-xs" %></div>
    <% end %>
  </ol>

  <div class="panel-body">
    <div class="container">
      <h3> 
        <%= @group.name.capitalize %>
      </h3>
      <hr />

      <% if @group.categories.length > 0 %>
        <h4> Categories </h4>
        <% @group.categories.each do |category| %>
          <%= link_to category.name, category %>
        <% end %>
        <hr />
      <% end %>

      <% if @group.leader_names.length > 0 %>
        <h4> Leaders </h4>
        <%= @group.leader_names %>
      <% end %>

      <% if @group.member_names.length > 0 %>
        <h4> Members </h4>
        <%= @group.member_names %>
      <% end %>

      <% if @group.documents.length > 0 %>
        <br />
        <h4> Documents Uploaded </h4>
        <% @group.documents.each do |doc| %>
          <%= render partial: "documents/document_list_item", locals: {doc: doc} %>
        <% end %>
      <% end %>
    </div>
  </div>

</div>