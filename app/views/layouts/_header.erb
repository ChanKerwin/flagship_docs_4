      <% end %>
    </div>
    <%= link_to root_url do %>
      <h3 class="navbar-text">Flagship Documents</h3>
    <% end %>
    <%= render partial: "layouts/search.html.erb" %>

    <!-- Buttons -->
    <div class="container">
      <ul class="nav navbar-nav">
