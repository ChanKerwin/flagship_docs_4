<%= form_for user do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p> 

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </p> 

  <p>
    <%= f.label :is_admin %>
    <%= f.check_box :is_admin %>
  </p>  
<% end %>